{
  "name": "meshadmin-electron",
  "productName": "MeshAdmin",
  "version": "1.0.0",
  "description": "Professional NPM Server Manager",
  "main": "main.js",
  "author": "MeshAdmin Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "prepare-backend": "node prepare-backend.js",
    "build": "npm run build:frontend && npm run build:backend && npm run prepare-backend && electron-builder",
    "build:frontend": "cd ../frontend && npm run build",
    "build:backend": "cd ../backend && npm run build",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:mac-arm": "electron-builder --mac --arm64",
    "dist:mac-intel": "electron-builder --mac --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.meshadmin.app",
    "productName": "MeshAdmin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "../frontend/dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "temp-backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "backend/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^3.0.2",
    "builder-util-runtime": "^9.3.1",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lazy-val": "^1.0.5",
    "lodash.escaperegexp": "^4.1.2",
    "lodash.isequal": "^4.5.0",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^6.0.8",
    "prom-client": "^15.1.3",
    "redis": "^5.8.1",
    "semver": "^7.7.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "systeminformation": "^5.27.7",
    "typed-emitter": "^2.1.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.3.1"
  }
}
